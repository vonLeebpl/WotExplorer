{% if is_granted('ROLE_USER') %}
    <div class="profile_pic">
        <img src="{{ app.user.emblem }}" alt="..." class="img-circle profile_img">
    </div>
    <div class="profile_info">
        <span>Welcome,</span>
        <h2>{{ app.user.username }}</h2>
        <span>{{ app.user.position }}</span>
    </div>
{% endif %}